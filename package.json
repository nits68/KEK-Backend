{
    "name": "kek-backend",
    "version": "1.0.0",
    "description": "Backend for the kek project",
    "main": "src/server.ts",
    "repository": {
        "private": false,
        "type": "git",
        "url": "https://github.com/nitslaszlo/kek"
    },
    "scripts": {
        "start": "node ./dist/server.js",
        "compile": "tsc & copyfiles -u 1 src/**/*.yml dist/",
        "build": "tsc & copyfiles -u 1 src/**/*.yml dist/",
        "compile:watch": "tsc --watch",
        "postinstall": "tsc & copyfiles -u 1 src/**/*.yml dist/",
        "dev": "nodemon",
        "format": "prettier --write ./src",
        "lint": "eslint ./src --ext .vue,.js,.ts",
        "lint-fix": "eslint --fix ./src --ext .vue,.js,.ts",
        "test": "jest || ECHO."
    },
    "author": "Esze GÃ¡bor",
    "license": "MIT",
    "engines": {
        "node": ">=20.0.0 <20.18.2"
    },
    "packageManager": "npm@10.8.3",
    "dependencies": {
        "@sendgrid/mail": "^8.1.3",
        "bcryptjs": "^2.4.3",
        "class-transformer": "^0.5.1",
        "class-validator": "^0.14.1",
        "connect-mongo": "^5.1.0",
        "cookie-parser": "^1.4.6",
        "cors": "^2.8.5",
        "dotenv": "^16.4.1",
        "express": "^4.18.2",
        "express-rate-limit": "^7.5.0",
        "express-session": "^1.18.0",
        "google-auth-library": "^9.6.0",
        "helmet": "^8.0.0",
        "mongoose": "^8.1.2",
        "morgan": "^1.10.0",
        "reflect-metadata": "^0.2.1",
        "serve-favicon": "^2.5.0",
        "swagger-jsdoc": "^6.2.8",
        "swagger-ui-express": "^5.0.0",
        "tslib": "^2.6.2"
    },
    "devDependencies": {
        "@types/bcryptjs": "^2.4.6",
        "@types/cookie-parser": "^1.4.6",
        "@types/cors": "^2.8.17",
        "@types/express": "^4.17.21",
        "@types/express-session": "^1.17.10",
        "@types/jest": "^29.5.11",
        "@types/morgan": "^1.9.9",
        "@types/node": "^20.17.8",
        "@types/serve-favicon": "^2.5.7",
        "@types/supertest": "^6.0.2",
        "@types/swagger-jsdoc": "^6.0.4",
        "@types/swagger-ui-express": "^4.1.6",
        "@types/validator": "^13.11.8",
        "@typescript-eslint/parser": "^8.18.1",
        "copyfiles": "^2.4.1",
        "eslint": "^9.17.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-prettier": "^5.2.1",
        "eslint-plugin-simple-import-sort": "^12.0.0",
        "globals": "^15.13.0",
        "jest": "^29.7.0",
        "nodemon": "^3.1.0",
        "prettier": "^3.2.5",
        "supertest": "^7.0.0",
        "ts-jest": "^29.1.2",
        "ts-node": "^10.9.2",
        "typescript": "^5.4.2",
        "typescript-eslint": "^8.18.1"
    },
    "jest": {
        "roots": [
            "<rootDir>/src/"
        ],
        "preset": "ts-jest",
        "verbose": true,
        "testEnvironment": "node",
        "transform": {
            "^.+\\.ts$": "ts-jest"
        },
        "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(ts|js)$",
        "moduleFileExtensions": [
            "ts",
            "js",
            "json",
            "node"
        ],
        "collectCoverage": true,
        "detectOpenHandles": true,
        "coverageDirectory": "coverage",
        "collectCoverageFrom": [
            "src/**/*.{ts,js}",
            "!src/**/*.d.ts"
        ]
    }
}
